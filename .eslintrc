{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "prettier"
  ],
  "extends": [
    "airbnb",
    "airbnb-base",
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "no-extra-parens": "error",
    "max-len": [
      "error",
      {
        "code": 100
      }
    ],
    "no-multi-spaces": "error",
    "prettier/prettier": "error"
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  }
}